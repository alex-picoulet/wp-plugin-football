<odoo>
    <template id="vehicle_detail_template" name="Vehicle Detail">
        <title>List of vehicles</title>
            <div id="wrap" class="container">
                <h1>Vehicle <span t-field="vehicle.immatriculation"></span></h1>
                <div class="row">

                        <h3 t-field="vehicle.model"></h3>

                        <p>Date d'achat :
                            <span t-field="vehicle.date_purchased"></span>
                        </p>
                        <p>

                        </p>
                        <p>
                            <img t-if="vehicle.thumbnail" t-attf-src="data:image/jpg;base64,{{ vehicle.thumbnail }}"
                                 height="120" width="120"
                                 style='margin:0px;padding-top:0px;'/>
                        </p>

                </div>
            </div>
    </template>
</odoo>