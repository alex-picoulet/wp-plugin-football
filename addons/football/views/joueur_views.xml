<odoo>
  <record id="view_form_joueur" model="ir.ui.view">
    <field name="name">Joueur form</field>
    <field name="model">football.joueur</field>
    <field name="arch" type="xml">
      <form string="joueur">
        <group>
          <field name="nom_complet"/>
          <field name="thumbnail" widget="image" options='{"size": [150, 140]}' />
          <field name="age" />
          <field name="fin_contrat" />
          <field name="poste" />
          <field name="equipe_id" />

        </group>
      </form>
    </field>
  </record>

  <record id="view_list_joueur" model="ir.ui.view">
        <field name="name">Joueur list</field>
        <field name="model">football.joueur</field>
        <field name="arch" type="xml">
            <list>
              <field name="nom_complet"/>
              <field name="thumbnail" widget="image" options='{"size": [150, 140]}' />
              <field name="age" />
              <field name="fin_contrat" />
              <field name="poste" />
                <field name="equipe_id" />
            </list>
        </field>
    </record>

</odoo>